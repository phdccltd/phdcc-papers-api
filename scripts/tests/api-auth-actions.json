    {
      "name": "register: OK",
      "method": "post",
      "uri": "/user/register",
      "data": {
        "username": "bryoney",
        "password": "shhhhh",
        "email": "bryoney@example.com",
        "g-recaptcha-response": "process.env.RECAPTCHA_BYPASS"
      },
      "return": {
        "ret": 0,
        "prop": "user.token",
        "typeof": "string"
      },
      "set": {
        "name": "token",
        "value": "user.token"
      }
    },
    {
      "name": "Log in as bryoney: postRegisterId",
      "method": "post",
      "uri": "/user/login",
      "preset": [
        {
          "name": "token",
          "use": "@token"
        }
      ],
      "data": {
        "token": "@token",
        "username": "author1",
        "password": "author1pwd",
        "g-recaptcha-response": "process.env.RECAPTCHA_BYPASS"
      },
      "return": {
        "ret": 0,
        "prop": "token",
        "typeof": "string"
      },
      "set": {
        "name": "token",
        "value": "token"
      }
