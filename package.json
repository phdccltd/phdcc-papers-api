{
  "name": "phdcc-papers-api",
  "version": "1.3.2",
  "description": "API for Papers journal/conference abstract and paper submission and review system",
  "author": "Chris Cant",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development LOGMODE=console node ./server.js",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "comment": "Must run tests with --runInBand to run sequentially so working directories not overwritten",
    "test": "jest --runInBand 2>tests1.txt",
    "testci": "jest --runInBand",
    "testtravis": "jest --runInBand && coveralls < coverage/lcov.info",
    "standard": "standard app.js logger.js server.js task.js utils.js models/*.js routes/*.js tests/*.js",
    "postinstall": "patch-package"
  },
  "comments": {
    "create_patch": "npx patch-package sequelize",
    "note_1": "supertest@6.1.1 has an issue",
    "note_2": "sqlite3@5.0.1 causes some problem"
  },
  "license": "MIT",
  "dependencies": {
    "archiver": "5.2.0",
    "bcrypt": "^5.0.0",
    "body-parser": "1.19.0",
    "cors": "^2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-mysql-session": "2.1.5",
    "express-session": "^1.17.1",
    "handlebars": "^4.7.6",
    "http-errors": "1.8.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "4.17.20",
    "mime-types": "2.1.28",
    "multer": "^1.4.2",
    "mysql2": "2.2.5",
    "needle": "2.6.0",
    "nodemailer": "6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "rotating-file-stream": "^2.1.3",
    "sequelize": "6.4.0",
    "validator": "13.5.2"
  },
  "devDependencies": {
    "patch-package": "6.2.2",
    "sqlite3": "5.0.0",
    "supertest": "6.0.1"
  }
}
